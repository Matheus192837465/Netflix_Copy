<style>
    body { background-color: #141414; color: white; }
    .movie-row { margin-top: 30px; margin-bottom: 30px; }
    .movie-card { background-color: transparent; border: none; cursor: pointer; transition: transform 0.2s; }
    .movie-card:hover { transform: scale(1.05); z-index: 10; }
    .movie-poster { border-radius: 4px; width: 100%; height: auto; min-height: 250px; object-fit: cover;}
    .overflow-auto::-webkit-scrollbar { display: none; }
    .overflow-auto { -ms-overflow-style: none; scrollbar-width: none; }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand text-danger fw-bold fs-3" href="/home">NETFLIX</a> 
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link active" href="/home">Início</a></li>
                <li class="nav-item"><a class="nav-link" href="/series">Séries</a></li>
                <li class="nav-item"><a class="nav-link" href="/filmes">Filmes</a></li>
                <li class="nav-item"><a class="nav-link" href="/">Sair</a></li>
            </ul>
        </div>
    </div>
</nav>

<main class="container-fluid">
    <header class="p-5 mb-4 bg-image text-white rounded-3" 
            style="background-image: url('https://placehold.co/1920x800/333/666?text=Banner+Destaque'); background-size: cover; background-position: center;">
        <div class="container-fluid py-5" style="background-color: rgba(0, 0, 0, 0.4); border-radius: 5px;">
            <h1 class="display-5 fw-bold">Destaque da Semana</h1>
            <p class="col-md-8 fs-4">Descrição do filme em destaque.</p>
            <button class="btn btn-light btn-lg" type="button"><i class="bi bi-play-fill"></i> Play</button>
            <button class="btn btn-secondary btn-lg" type="button">Mais Informações</button>
        </div>
    </header>

    <div class="container-fluid movie-row">
        <h2>Minha Lista</h2>
        <div class="row flex-nowrap overflow-auto p-2"> 
            {{#each movies}}
            <div class="col-6 col-sm-4 col-md-3 col-lg-2 p-1"> 
                <div class="card movie-card">
                    <img src="{{this.poster}}" class="movie-poster" alt="{{this.name}}" onerror="this.src='https://placehold.co/200x300?text={{this.name}}'">
                </div>
            </div>
            {{else}}
            <p>Nenhum filme na lista.</p>
            {{/each}}
        </div>
    </div>
</main>