<style>
    body { background-color: #141414; color: white; padding-top: 70px; }
    .movie-card { background-color: transparent; border: none; cursor: pointer; transition: transform 0.2s; }
    .movie-card:hover { transform: scale(1.05); z-index: 10; }
    .movie-poster { border-radius: 4px; width: 100%; height: auto; aspect-ratio: 2/3; object-fit: cover; }
    .nav-link { color: #e5e5e5 !important; }
    .nav-link.active { color: white !important; font-weight: bold; }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" style="background-color: #141414 !important;">
    <div class="container-fluid">
        <a class="navbar-brand text-danger fw-bold fs-3" href="/home">NETFLIX</a> 
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/home">Início</a></li>
                <li class="nav-item"><a class="nav-link" href="/series">Séries</a></li>
                <li class="nav-item"><a class="nav-link active" href="/filmes">Filmes</a></li>
                <li class="nav-item"><a class="nav-link" href="/">Sair</a></li>
            </ul>
        </div>
    </div>
</nav>

<main class="container-fluid px-5">
    <h1 class="display-5 mb-4">Filmes</h1> 
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-3">
        {{#each movies}}
        <div class="col">
            <div class="card movie-card">
                <img src="{{this.poster}}" class="movie-poster" onerror="this.src='https://placehold.co/200x300?text=Sem+Imagem'">
            </div>
        </div>
        {{else}}
        <p>Nenhum filme encontrado.</p>
        {{/each}}
    </div> 
</main>